    <div>
        <div class=row>
            <div class="col-sm">
                <div class="form-group mt-2">
                    <label for="firstName">Pierwsza liczba</label>
                    <input type="text" class="form-control" id="firstName" @bind-value="@first">
                </div>
                <div class="form-group mt-2">
                    <label for="lastName">Pierwsza liczba</label>
                    <input type="text" class="form-control" id="lastName" @bind-value="@second">
                </div>
                <button class="btn btn-primary mt-3" @onclick="Calculate">Zapisz</button>
            </div>
            <div class="col-sm"></div>
            <div class="col-sm"></div>
        </div>
        <div class="row mt-5">
            <div class="col-sm">
                <h1>Wynik: @result</h1>
            </div>
            <div class="col-sm"></div>
            <div class="col-sm"></div>
        </div>
    </div>


    @code {

        [Parameter]
        public string OperationType { get; set; }

        int first;
        int second;
        int result;


        void Calculate()
        {
            if (OperationType == "dodawanie")
                result = first + second;
            else
                result = first * second;
        }
    }